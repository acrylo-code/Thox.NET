@model IEnumerable<Thox.Models.RoomPrice>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="admin_container">
    <div class="admin_card">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.GroupSize)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Room)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.RoomID)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RoomPriceID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.RoomPriceID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.RoomPriceID">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
