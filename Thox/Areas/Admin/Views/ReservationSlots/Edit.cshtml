@model Thox.Models.ReservationSlot

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="admin_container">
    <div class="admin_card">
    <h4>ReservationSlot</h4>
    <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SlotID" />
            <div class="form-group">
                <label asp-for="RoomID" class="control-label"></label>
                <select asp-for="RoomID" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(Thox.Models.RoomName)))
                    {
                        <option value="@((int)item)">@item</option>
                    }
                </select>
                <span asp-validation-for="RoomID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservationDate" class="control-label"></label>
                <input asp-for="ReservationDate" class="form-control" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <select asp-for="State" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(Thox.Models.SlotState)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
