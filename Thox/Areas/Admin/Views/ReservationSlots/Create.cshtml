@model ReservationSlot

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="admin_container">
    <div class="admin_card">
        <h4>ReservationSlot</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomID" class="control-label"></label>
                @* <input asp-for="RoomID" class="form-control" /> *@
                <select asp-for="RoomID" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(RoomName)))
                    {
                        <option value="@((int)item)">@item</option>
                    }
                </select>
                <span asp-validation-for="RoomID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservationDate" class="control-label"></label>
                <input asp-for="ReservationDate" class="form-control" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <select asp-for="State" class="form-control">
                @foreach (var item in Enum.GetValues(typeof(SlotState)))
                {
                    <option value="@item">@item</option>
                }
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
